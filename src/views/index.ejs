<head>
  <meta charset="UTF-8" />
  <title>Mapa de Reservas do Restaurante</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #f7f7f7;
      color: #333;
      margin: 0;
      padding: 20px;
    }

    h1, h2 {
      text-align: center;
      color: #4a47a3;
    }

    /* Layout flex√≠vel */
    .container {
      display: flex;
      justify-content: center;
      align-items: flex-start;
      gap: 40px;
      flex-wrap: wrap;
      margin-bottom: 40px;
    }

    /* Form */
    form {
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      width: 300px;
    }

    input, select {
      width: 100%;
      padding: 10px;
      margin: 8px 0;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    button {
      background-color: #4a47a3;
      color: white;
      padding: 12px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      width: 100%;
      font-size: 16px;
    }

    button:hover {
      background-color: #36337a;
    }

    /* Grid fixo */
    .grid {
      display: grid;
      grid-template-columns: repeat(2, 120px);
      gap: 20px;
      justify-content: center;
    }

    .mesa {
      padding: 25px;
      border-radius: 8px;
      color: white;
      text-align: center;
      font-weight: bold;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .disponivel { background: #2ecc71; }
    .reservado { background: #f39c12; }
    .ocupado { background: #e74c3c; }

    /* Tabela */
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 40px;
    }

    th, td {
      padding: 12px;
      border-bottom: 1px solid #ddd;
      text-align: center;
    }

    tr:hover {
      background-color: #f1f1f1;
    }
  </style>
</head>
<body>
  <h1>Gest√£o de Reservas do Restaurante</h1>

  <div class="container">
    <form method="post" action="/reservas">
      <h2 style="text-align: center;">Nova Reserva</h2>
      <input type="text" name="nomeCliente" placeholder="Nome do Cliente" required>
      <input type="number" name="numeroMesa" placeholder="N√∫mero da Mesa" required>
      <input type="datetime-local" name="dataHoraReserva" required>
      <select name="status">
        <option value="reservado">Reservado</option>
        <option value="ocupado">Ocupado</option>
        <option value="dispon√≠vel">Dispon√≠vel</option>
      </select>
      <input type="text" name="contatoCliente" placeholder="Contato" required>
      <button type="submit">Criar Reserva</button>
    </form>

    <div class="grid">
  <% for(let i = 1; i <=8; i++) { 
    let reservaMesa = reservas.find(r => r.numeroMesa === i);
    let status = reservaMesa ? reservaMesa.status : 'disponivel';
    status = status.normalize("NFD").replace(/[\u0300-\u036f]/g, "").toLowerCase(); 
  %>
    <div class="mesa <%= status %>">
      Mesa <%= i %><br>
      <small><%= reservaMesa ? reservaMesa.status : 'dispon√≠vel' %></small>
    </div>
  <% } %>
</div>




<table>
  <tr>
    <th>Cliente</th>
    <th>Mesa</th>
    <th>Data/Hora</th>
    <th>Status</th>
    <th>Contato</th>
    <th>A√ß√µes</th>
  </tr>
  <% reservas.forEach(reserva => { %>
  <tr>
    <td><%= reserva.nomeCliente %></td>
    <td><%= reserva.numeroMesa %></td>
    <td><%= new Date(reserva.dataHoraReserva).toLocaleString() %></td>
    <td><%= reserva.status %></td>
    <td><%= reserva.contatoCliente %></td>
    <td>
      <a href="/reservas/<%= reserva._id %>/editar">‚úèÔ∏è</a>
      <a href="/reservas/<%= reserva._id %>/excluir" onclick="return confirm('Tem certeza que deseja excluir?')">üóëÔ∏è</a>
    </td>
  </tr>
  <% }) %>
</table>


</body>
</html>
